<!DOCTYPE html>
<html>
  <head>
    <title>Blocipedia</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
      <ul class="navbar-nav mr-auto">
        <li><a class="navbar-brand h1" href="#">Blocipedia</a></li>
        <li class="nav-item"><%= link_to "Wikis", wikis_path, class: "nav-link" %></li>
        <li class="nav-item"><a class="nav-link" href="#">Articles</span></a></li>
      </ul>
      <form class="form-inline pull-right">
        <% if user_signed_in? %>
          <button class="btn btn-outline-primary mr-sm-2"><%= link_to "Sign Out", destroy_user_session_path, :method => :delete %></button>
        <% else %>
          <button class="btn btn-outline-primary mr-sm-2"><%= link_to "Sign In", new_user_session_path %></button>
          <button class="btn btn-outline-primary mr-sm-2"><%= link_to "Sign Up", new_user_registration_path %></button>
        <% end %>
      </form>
    </nav>
    <div class="container mt-4 p-2">
      <%= render 'layouts/messages' %>
      <%= yield %>
    </div>
  </body>
</html>
