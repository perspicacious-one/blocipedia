    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark mb-5">
      <ul class="navbar-nav mr-auto">
        <li><a class="navbar-brand h1" href="#">Blocipedia</a></li>
        <li class="nav-item"><%= link_to "Wikis", wikis_path, class: "nav-link" %></li>
        <li class="nav-item"><a class="nav-link" href="#">Articles</span></a></li>
      </ul>
      <%= render "layouts/user_controls" %>
    </nav>
