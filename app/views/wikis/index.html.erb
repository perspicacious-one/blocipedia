<div class="container wiki-list-container">
  <h2>Wiki Articles</h2>
  <div class="btn-group my-3">
  <%= button_to "Add New", new_wiki_path, method: :get, class: "btn btn-success" %>
  </div>
  <% @wikis.each do |wiki| %>
  <div class="row w-100">
    <div class="card my-2 w-100">
        <div class="card-header">
          <%= link_to wiki.title, wiki, class: "h4 card-title" %>
          <div><small class="font-weight-light">
            created on <%= wiki.created_at.strftime("%Y-%m-%d") %>, by <strong><%= author_name(wiki) %></strong>
          </small></div>
        </div>
        <div class="card-body">
          <p class="card-text"><%= excerpt(wiki.body) %></p>
          <%= link_to "Read More", wiki, class: "btn btn-sm btn-outline-primary" %>
        </div>
    </div>
  </div>
  <% end %>
  <!-- todo: add paginated view & search -->
</div>
<script>blocmetrics.report('index loaded');</script>
